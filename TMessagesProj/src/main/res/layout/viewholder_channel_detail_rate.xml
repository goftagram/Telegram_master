<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0">


        <RatingBar
            android:id="@+id/ratingBar_star_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:numStars="5"
            android:max="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:rating="5"/>

        <TextView
            android:id="@+id/textView_star_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/ratingBar_star_5"
            android:layout_alignBaseline="@id/ratingBar_star_5"
            android:layout_alignTop="@id/ratingBar_star_5"
            android:text="56%"
            android:layout_marginLeft="16dp"
            />

        <RatingBar
            android:id="@+id/ratingBar_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@id/ratingBar_star_5"
            android:layout_alignLeft="@id/ratingBar_star_5"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:rating="4"/>

        <TextView
            android:id="@+id/textView_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_star_5"
            android:layout_toRightOf="@id/ratingBar_star_4"
            android:layout_alignBaseline="@id/ratingBar_star_4"
            android:layout_alignTop="@id/ratingBar_star_4"
            android:text="48%"
            android:layout_marginLeft="16dp"
            />

        <RatingBar
            android:id="@+id/ratingBar_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@id/ratingBar_star_4"
            android:layout_alignLeft="@id/ratingBar_star_4"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:rating="3"
            />

        <TextView
            android:id="@+id/textView_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_star_4"
            android:layout_toRightOf="@id/ratingBar_star_3"
            android:layout_alignBaseline="@id/ratingBar_star_3"
            android:layout_alignTop="@id/ratingBar_star_3"
            android:text="28%"
            android:layout_marginLeft="16dp"
            />

        <RatingBar
            android:id="@+id/ratingBar_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@id/ratingBar_star_3"
            android:layout_alignLeft="@id/ratingBar_star_3"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:rating="2"/>

        <TextView
            android:id="@+id/textView_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_star_3"
            android:layout_toRightOf="@id/ratingBar_star_2"
            android:layout_alignBaseline="@id/ratingBar_star_2"
            android:layout_alignTop="@id/ratingBar_star_2"
            android:text="28%"
            android:layout_marginLeft="16dp"
            />

        <RatingBar
            android:id="@+id/ratingBar_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@id/ratingBar_star_2"
            android:layout_alignLeft="@id/ratingBar_star_2"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:rating="1"/>

        <TextView
            android:id="@+id/textView_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_star_2"
            android:layout_toRightOf="@id/ratingBar_star_1"
            android:layout_alignBaseline="@id/ratingBar_star_1"
            android:layout_alignTop="@id/ratingBar_star_1"
            android:text="28%"
            android:layout_marginLeft="16dp"
            />


    </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center">

            <RatingBar
                android:id="@+id/ratingBar_star_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="true"
                android:rating="4"/>

            <TextView
                android:id="@+id/textView_star_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.1"
                android:layout_marginLeft="16dp"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
