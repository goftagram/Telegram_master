<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <ImageView
        android:id="@+id/signupfragment_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#77000000"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="48dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_fragment_LinearLayout_height"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:weightSum="5">

            <EditText
                android:id="@+id/editText_firstName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#77FFFFFF"
                android:hint="@string/fragment_sign_up_first_name"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/signup_fragment_EditText_textsize" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#77FFFFFF"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/username_white" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_fragment_LinearLayout_height"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="invisible"

            android:weightSum="5">

            <EditText
                android:id="@+id/editText_lastName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#77FFFFFF"
                android:hint="@string/fragment_sign_up_last_name"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/signup_fragment_EditText_textsize" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#77FFFFFF"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/username_white" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_fragment_LinearLayout_height"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="invisible"

            android:weightSum="5">

            <EditText
                android:id="@+id/editText_phoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#77FFFFFF"
                android:hint="@string/fragment_sign_up_phone_number"
                android:inputType="phone"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="@dimen/signup_fragment_EditText_textsize" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#77FFFFFF"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone" />

        </LinearLayout>


        <com.dd.CircularProgressButton
            android:id="@+id/btnWithText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_fragment_LinearLayout_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signup_fragment_CircularProgressButton_textsize"
            app:cpb_colorIndicator="@color/accent"
            app:cpb_colorIndicatorBackground="@color/primary_dark"
            app:cpb_colorProgress="#00000000"
            app:cpb_selectorIdle="@drawable/enter_btn_selector"
            app:cpb_textComplete="@string/fragment_sign_up_btn_success_text"
            app:cpb_textError="@string/fragment_sign_up_btn_error_text"
            app:cpb_textIdle="@string/fragment_sign_up_btn_text" />

    </LinearLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/signup_fragment_title_marginTop"
        android:textColor="@android:color/white"
        android:text="@string/app_name"
        android:textSize="@dimen/signup_fragment_Title_textsize" />


</RelativeLayout>