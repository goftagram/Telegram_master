<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/signupfragment_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/signup_fragment_title_marginTop"
        android:textColor="@android:color/white"
        android:text="@string/app_name"
        android:textSize="@dimen/signup_fragment_Title_textsize" />



    <com.dd.CircularProgressButton
            android:id="@+id/btnWithText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_fragment_LinearLayout_height"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="24dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="48dp"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signup_fragment_CircularProgressButton_textsize"
            app:cpb_colorIndicator="@color/accent"
            app:cpb_colorIndicatorBackground="@color/primary_dark"
            app:cpb_colorProgress="#00000000"
            app:cpb_selectorIdle="@drawable/enter_btn_selector"
            app:cpb_textComplete="@string/fragment_sign_up_btn_success_text"
            app:cpb_textError="@string/fragment_sign_up_btn_error_text"
            app:cpb_textIdle="@string/btn_ok_text" />


    <TextView
        android:id="@+id/textView_term_of_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="24dp"


        android:padding="16dp"
        android:layout_below="@id/title"
        android:layout_above="@id/btnWithText"
        android:textColor="@android:color/white"
        android:text="@string/rules_of_add_channel"
        android:background="#55000000"
        android:textSize="@dimen/signup_fragment_EditText_textsize"
        android:lineSpacingExtra="4dp"
        android:scrollbars="vertical"/>
</RelativeLayout>